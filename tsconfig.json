{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"jsxImportSource": "ripple",
		"noEmit": true,
		"isolatedModules": true
	},
	"include": ["**/*.tsx", "src/**/*.ripple"],
	"exclude": ["**/node_modules/**", "**/dist/**"]
}
